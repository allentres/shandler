{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 8,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"backtick"
		],
		"semi": [
			"error",
			"never"
		],
		"no-empty": [
			"error",
			{
				"allowEmptyCatch": true
			}
		],
		"no-console": [
			"error",
			{
				"allow": [
					"warn",
					"log",
					"error",
					"info"
				]
			}
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_"
			}
		]
	}
}